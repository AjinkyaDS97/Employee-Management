
@model HomeDetailsViewModel

@{

    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Details Page";
    var PhotoPath="~/Images/"+(Model.emp.PhotoPath ?? "Noimage.jpg");
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.emp.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@PhotoPath" asp-append-version="true"/>
                
                <h4>Employee ID :@Model.emp.Id</h4>
                <h4>Email ID :@Model.emp.Email</h4>
                <h4>Department:@Model.emp.Department</h4>
                

            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@Model.emp.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>



        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Js/CustomeScript.js"></script>
}