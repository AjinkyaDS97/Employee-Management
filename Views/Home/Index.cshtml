@model IEnumerable<Employee>


@{

    ViewBag.Title = @ViewBag.pageTitle;
}
<div class="card-deck">
        @foreach (var emp in Model)
        {
            var PhotoPath = "~/Images/" + (emp.PhotoPath ?? "Noimage.jpg");
            <div class="card m-3" style="min-width:18rem; max-width:30.5%">

                <div class="card-header">
                    <h3>@emp.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@PhotoPath" asp-append-version="true" />
                <div class="card-footer text-center">


                    <a asp-controller="home" asp-action="details" asp-route-id="@emp.Id"
                       class="btn btn-primary m-1">View</a>

                    <a  asp-action="edit" asp-controller="home" asp-route-id="@emp.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-primary m-1">Delete</a>
                </div>
            </div>         
        } 
</div>

@section Scripts{
    <script src="~/Js/CustomeScript.js"></script>
}

